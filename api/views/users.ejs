<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Gestion des Utilisateurs</title>
  <style>
    body { margin: 2em; font-family: Arial, sans-serif; }
    table { border-collapse: collapse; width: 100%; margin-top: 1em; }
    th, td { border: 1px solid #ccc; padding: 8px; text-align: center; }
    th { background: #eee; }
    button { cursor: pointer; margin: 0 2px; }
    .error { color: red; }
  </style>
</head>
<body>
  <h1>Gestion des Utilisateurs</h1>
  <p>Connecté(e) : <%= user.username %> - <%= user.email %></p>
  <a href="/dashboard">Retour au tableau de bord</a> |
  <a href="/logout">Déconnexion</a>

  <hr>

  <!-- === FORMULAIRE DE CRÉATION === -->
  <h2>Créer un nouvel utilisateur</h2>
  <form id="createUserForm">
    <label>Nom :</label>
    <input type="text" name="username" required>

    <label>Email :</label>
    <input type="email" name="email" required>

    <label>Mot de passe :</label>
    <input type="password" name="password" required>

    <button type="submit">Créer</button>
  </form>

  <hr>

  <!-- === LISTE DES UTILISATEURS === -->
  <h2>Liste des utilisateurs</h2>
  <table>
    <thead>
      <tr>
        <th>Nom</th>
        <th>Email</th>
        <th>Créé le</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (!users || users.length === 0) { %>
        <tr><td colspan="4">Aucun utilisateur enregistré.</td></tr>
      <% } else { %>
        <% users.forEach(u => { %>
          <tr data-email="<%= u.email %>">
            <td class="username"><%= u.username %></td>
            <td class="email"><%= u.email %></td>
            <td><%= new Date(u.createdAt).toLocaleDateString('fr-FR') %></td>
            <td>
              <button class="edit-btn">Modifier</button>
              <button class="delete-btn">Supprimer</button>
              <a href="/users/<%= u.email %>">Détails</a>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>

  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <script>
    // === CRÉATION ===
    document.getElementById('createUserForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const data = {
        username: form.username.value,
        email: form.email.value,
        password: form.password.value
      };

      const res = await fetch('/users', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify(data)
      });

      if (!res.ok) {
        const msg = (await res.json().catch(() => ({}))).message || 'Erreur création utilisateur';
        alert(msg);
      }
      location.reload();
    });

    // === MISE À JOUR & SUPPRESSION ===
    document.addEventListener('click', async (ev) => {
      const tr = ev.target.closest('tr[data-email]');
      if (!tr) return;
      const email = tr.dataset.email;

      // --- SUPPRIMER ---
      if (ev.target.classList.contains('delete-btn')) {
        if (!confirm('Supprimer l’utilisateur ' + email + ' ?')) return;

        const res = await fetch('/api/users/' + encodeURIComponent(email), {
          method: 'DELETE',
          credentials: 'include'
        });

        if (!res.ok) {
          const msg = (await res.json().catch(() => ({}))).message || 'Erreur suppression';
          alert(msg);
        }
        location.reload();
        return;
      }

      // --- MODIFIER (édition directe dans le tableau) ---
      if (ev.target.classList.contains('edit-btn')) {
        // Empêche double édition
        if (tr.classList.contains('editing')) return;
        tr.classList.add('editing');

        // Sauvegarde des valeurs actuelles
        const nameCell = tr.querySelector('.username');
        const oldName = nameCell.textContent.trim();
        const actionsCell = tr.querySelector('td:last-child');
        const oldActions = actionsCell.innerHTML;

        // Transforme la cellule en champ éditable
        nameCell.innerHTML = `
          <input type="text" value="${oldName}" placeholder="Nom">
          <br>
          <input type="password" placeholder="Nouveau mot de passe (optionnel)">
        `;

        // Boutons Sauvegarder / Annuler
        actionsCell.innerHTML = `
          <button class="save-btn">Sauvegarder</button>
          <button class="cancel-btn">Annuler</button>
        `;

        // === SAUVEGARDE ===
        actionsCell.querySelector('.save-btn').addEventListener('click', async () => {
          const newName = nameCell.querySelector('input[type="text"]').value.trim();
          const newPass = nameCell.querySelector('input[type="password"]').value.trim();

          const body = {};
          if (newName && newName !== oldName) body.username = newName;
          if (newPass) body.password = newPass;

          if (Object.keys(body).length === 0) {
            alert('Aucune modification à enregistrer.');
            return;
          }

          const res = await fetch('/api/users/' + encodeURIComponent(email), {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify(body)
          });

          if (!res.ok) {
            const msg = (await res.json().catch(() => ({}))).message || 'Erreur mise à jour';
            alert(msg);
          } else {
            alert('Utilisateur mis à jour');
            if (body.username) nameCell.textContent = body.username;
            else nameCell.textContent = oldName;
          }

          tr.classList.remove('editing');
          actionsCell.innerHTML = oldActions;
        });

        // === ANNULATION ===
        actionsCell.querySelector('.cancel-btn').addEventListener('click', () => {
          nameCell.textContent = oldName;
          actionsCell.innerHTML = oldActions;
          tr.classList.remove('editing');
        });
      }
    });
  </script>
</body>
</html>
